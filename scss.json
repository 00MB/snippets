{
	// Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"css skeleton": {
		"prefix": "skeleton",
		"body": [
			"/*Lato font*/",
			"@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;1,400&display=swap');\n",
			"/*DM sans font*/",
			"@import url('https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap');\n",
			"/*Common colours*/\n",
			"/*Black and white*/",
			"$$white: #f8faff;",
			"$$pure-white: #ffffff;",
			"$$neuralworks-white: #ecebe7;",
			"$$black: #333333;",
			"$$pure-black: #000000;",
			"\n/*Red*/",
			"$$red: #ff0000;",
			"$$fun-red: #e17a77;",
			"$$fun-orange: #f4af78;",
			"\n/*Green*/",
			"$$green: #008000;",
			"$$fun-green: #85ec6b;",
			"$$neon-green: #39ff14;",
			"\n/*Blue*/",
			"$$blue: #0000ff;",
			"$$facebook-blue: #4267b2;",
			"$$twitter-blue: #1da1f2;",
			"$$fun-blue: #729fec;",
			"$$discord-blue-old: #7289da;",
			"$$neuralworks-blue: #437085;",
			"$$hestia-purple: #5900cc;",

			"body {background-color:$blue}"
		],
		"description": "skeleton for css"
	}
}